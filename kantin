CREATE DATABASE kantin;
USE kantin;

CREATE TABLE produk (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nama VARCHAR(100),
  harga INT,
  stok INT,
  gambar VARCHAR(100)
);

